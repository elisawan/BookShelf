<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/req_book_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle_sent"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Book request sent!"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/req_book_message"
        app:layout_constraintRight_toLeftOf="@+id/req_book_message" />

    <ImageView
        android:id="@+id/req_book_image"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/book_image_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_book_message"
        app:srcCompat="@drawable/book_image_placeholder" />

    <TextView
        android:id="@+id/req_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="book title"
        android:gravity="right"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/req_book_image"
        app:layout_constraintTop_toBottomOf="@+id/req_book_message" />

    <TextView
        android:id="@+id/req_book_author"
        android:layout_width="76dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:text="book author"
        android:gravity="right"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/req_book_image"
        app:layout_constraintTop_toBottomOf="@+id/req_book_title" />


</android.support.constraint.ConstraintLayout>